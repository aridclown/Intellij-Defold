<idea-plugin>
    <id>com.defold.IntelliJ-Defold</id>
    <vendor email="" url="https://www.defold.com">Defold</vendor>
    <description><![CDATA[
      Minimal skeleton for Defold integration. Provides no UI yet.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <!-- Depend on EmmyLua to use its PSI in evaluator/range detection -->
    <depends>com.tang</depends>
    <!-- SumnekoLua plugin for Lua language support -->
    <!--    <depends>com.cppcxy.Intellij-SumnekoLua</depends>-->
    <!--    <depends>com.redhat.devtools.lsp4ij</depends>-->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Start detection after project is opened -->
        <postStartupActivity implementation="com.aridclown.intellij.defold.DefoldProjectActivity"/>
        <additionalLibraryRootsProvider implementation="com.aridclown.intellij.defold.DefoldStdLibraryProvider"/>
        <fileIconProvider implementation="com.aridclown.intellij.defold.ui.DefoldFileIconProvider"/>
        <projectOpenProcessor implementation="com.aridclown.intellij.defold.DefoldProjectOpenProcessor"/>
        <fileTemplateGroup implementation="com.aridclown.intellij.defold.templates.DefoldFileTemplateGroupDescriptorFactory"/>
        <internalFileTemplate name="Script"/>
        <internalFileTemplate name="GUI Script"/>
        <internalFileTemplate name="Render Script"/>
        <internalFileTemplate name="Lua Module"/>
        <internalFileTemplate name="Editor Script"/>

        <!-- Notification group for Defold notifications -->
        <notificationGroup id="Defold" displayType="BALLOON"/>

        <toolWindow id="DefoldProject"
                    secondary="true"
                    icon="com.aridclown.intellij.defold.ui.DefoldIcons.defoldOutlineLightIcon"
                    anchor="right"
                    factoryClass="com.aridclown.intellij.defold.ui.DefoldToolWindowFactory"/>

        <!-- debugger -->
        <configurationType implementation="com.aridclown.intellij.defold.debugger.DefoldMobDebugConfigurationType"/>
        <programRunner implementation="com.aridclown.intellij.defold.debugger.DefoldProjectDebugProgramRunner"/>
        <programRunner implementation="com.aridclown.intellij.defold.debugger.DefoldProjectRunProgramRunner"/>
        <xdebugger.breakpointType implementation="com.aridclown.intellij.defold.debugger.DefoldScriptBreakpointType"/>
        <completion.contributor language="Lua"
                                implementationClass="com.aridclown.intellij.defold.debugger.MobDebugCompletionContributor"/>
        <runConfigurationProducer implementation="com.aridclown.intellij.defold.debugger.DefoldMobDebugConfigurationProducer"/>
    </extensions>

    <actions>
        <action id="Defold.NewScript"
                class="com.aridclown.intellij.defold.templates.CreateDefoldScriptFileAction"
                text="Defold Script File"
                description="Create a new Defold script file">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFromTemplate"/>
        </action>

        <action id="Defold.HotReload"
                class="com.aridclown.intellij.defold.actions.DefoldHotReloadAction"
                icon="AllIcons.Actions.Refresh"
                text="Hot Reload"
                description="Reload modified resources in running Defold game">
            <keyboard-shortcut keymap="$default" first-keystroke="meta R"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl R"/>
        </action>
    </actions>
</idea-plugin>
