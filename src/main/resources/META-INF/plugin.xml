<idea-plugin>
    <id>com.defold.IntelliJ-Defold</id>
    <name>Defold</name>
    <vendor email="" url="https://www.defold.com">Defold</vendor>
    <description><![CDATA[
      Minimal skeleton for Defold integration. Provides no UI yet.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <!-- Depend on EmmyLua to use its PSI in evaluator/range detection -->
    <depends>com.tang</depends>
    <!-- SumnekoLua plugin for Lua language support -->
    <!--    <depends>com.cppcxy.Intellij-SumnekoLua</depends>-->
    <!--    <depends>com.redhat.devtools.lsp4ij</depends>-->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Start detection after project is opened -->
        <postStartupActivity implementation="com.aridclown.intellij.defold.DefoldProjectActivity"/>
        <additionalLibraryRootsProvider implementation="com.aridclown.intellij.defold.DefoldStdLibraryProvider"/>
        <fileIconProvider implementation="com.aridclown.intellij.defold.DefoldFileIconProvider"/>

        <!-- Notification group for Defold notifications -->
        <notificationGroup id="Defold" displayType="BALLOON"/>

        <toolWindow id="DefoldProject"
                    secondary="true"
                    icon="com.aridclown.intellij.defold.util.DefoldIcons.defoldOutlineIcon"
                    anchor="right"
                    factoryClass="com.aridclown.intellij.defold.ui.DefoldToolWindowFactory"/>

        <!-- debugger -->
        <configurationType implementation="com.aridclown.intellij.defold.debugger.DefoldMobDebugConfigurationType"/>
        <programRunner implementation="com.aridclown.intellij.defold.debugger.DefoldMobDebugProgramRunner"/>
        <xdebugger.breakpointType implementation="com.aridclown.intellij.defold.debugger.DefoldScriptBreakpointType"/>
    </extensions>

    <actions>
        <!-- Reserve actions for later phases -->
    </actions>
</idea-plugin>
