<idea-plugin>
    <id>com.defold.IntelliJ-Defold</id>
    <name>Defold</name>
    <vendor email="" url="https://www.defold.com">Defold</vendor>
    <description><![CDATA[
      Minimal skeleton for Defold integration. Provides no UI yet.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <!-- SumnekoLua plugin for Lua language support -->
    <depends>com.cppcxy.Intellij-SumnekoLua</depends>
    <depends>com.redhat.devtools.lsp4ij</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Start detection after project is opened -->
        <postStartupActivity implementation="com.aridclown.intellij.defold.DefoldProjectActivity"/>
        <additionalLibraryRootsProvider implementation="com.aridclown.intellij.defold.DefoldStdLibraryProvider"/>

        <!-- Notification group for Defold notifications -->
        <notificationGroup id="Defold" displayType="BALLOON"/>

        <toolWindow id="DefoldProject"
                    secondary="true"
                    icon="AllIcons.Toolwindows.WebToolWindow"
                    anchor="right"
                    factoryClass="com.aridclown.intellij.defold.ui.DefoldToolWindowFactory"/>
    </extensions>

    <actions>
        <!-- Reserve actions for later phases -->
    </actions>
</idea-plugin>
